<Window x:Class="OpenWrap.Windows.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:OpenWrap.Windows"
    Title="OpenWrap Console" Height="569" Width="875" Template="{DynamicResource PackagesTemplate}">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="733*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*" />
            <RowDefinition Height="495*" />
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="2">OpenWrap Console</Label>
        <ListBox Grid.Row="1" ItemsSource="{Binding Nouns}" SelectedItem="{Binding SelectedNoun, Mode=OneWayToSource}" DisplayMemberPath="Noun" />
        <ContentPresenter Grid.Column="1" Grid.Row="1" Content="{Binding SelectedNoun}"/>
    </Grid>
</Window>
